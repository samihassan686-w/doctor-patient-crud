{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "isolatedModules": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*", "*.ts", "*.js"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
